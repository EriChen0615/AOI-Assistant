{
    "manifest_version": 3,
    "name": "AOI Ambient Memory Tracker for Chrome",
    "version": "1.0",
    "description": "Track browser usage for personal ambient assistant AOI.",
    "permissions": ["tabs", "storage", "idle", "scripting", "activeTab"],
    "host_permissions": [
      "<all_urls>",
      "http://localhost:5050/",
      "http://127.0.0.1:5050/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "AOI Ambient Memory Tracker"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+A",
          "mac": "Alt+A"
        },
        "description": "Toggle AOI memory tracking mode"
      }
    }
  }